<div class="row">
	<div class="col-md-12">
		<h4>
 			<%= "Здравствуйте, пользователь #{current_user.name}" %>
 		</h4>
 	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="form-group">
 			<%= link_to 'Выйти как пользователь', destroy_user_session_path, :method => :delete, class: 'btn btn-primary btn-sm' %>
 	</div>
</div>

<div class="row">
 	<p>Список компаниий</p>
 	<div class="col-md-12">
 		<% @companies.each do |company| %>
 			<ul>
 				<li><%= link_to "#{company.name} (#{company.email})", new_member_session_path(email: current_user.email, company_id: company.id) %></li>
 			</ul>
 		<% end %>
 	</div>
</div>