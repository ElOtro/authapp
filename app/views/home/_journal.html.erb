<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, @sort %>
<table class="table table-bordered">
	<thead>
	  <tr>
		  <th class="col-md-1"><%= sortable "id", "ID" %></th>
		  <th class="col-md-2"><%= sortable "created_at", "Дата создания" %></th>
		  <th>Компания</th>
		  <th>Email</th>
		</tr>
	</thead>
	<tbody>
    <% @companies.each do |company| %>
          <tr>
            <td><%= company.id %></td>
            <td><%= "#{l company.created_at, format: :short}" if company.created_at %></td>
            <td><%= company.name %></td>
            <td><%= company.email %></td>      
          </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @companies, :theme => 'bootstrap', remote: true %>